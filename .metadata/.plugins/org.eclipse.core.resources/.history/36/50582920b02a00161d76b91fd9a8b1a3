package br.com.brq.financialhealth.persistence;

import br.com.brq.financialhealth.entities.Usuario;
import br.com.brq.financialhealth.persistence.generics.DAOGeneric;
import br.com.brq.financialhealth.util.HibernateUtil;

public class DAOUsuario extends DAOGeneric<Usuario, Integer>{

	public DAOUsuario() {
		super(Usuario.class);
	}
	
	public boolean hasLogin(Integer cpf) throws Exception{
		
		boolean resultado = false;
		
		session = HibernateUtil.getSessionFactory().openSession();
		
		query = session.getNamedQuery("usuario.haslogin");
		query.setInteger("c", cpf);
		
		if(cpf > 0){
			return resultado = true;
		}
		
		return resultado;
	}
	
	public boolean findByLogineSenha(String cpf, String senha) throws Exception{
		
		session = HibernateUtil.getSessionFactory().openSession();
		
		query = session.getNamedQuery("usuario.findbyloginesenha");
		query.setString("c1", cpf);
		query.setString("c2", senha);
		
		if( cpf != null){
			
			return true;
		}
		else{
			return false;
			
			
		}
	}
	
	public Usuario autenticar(String cpf, String senha) throws Exception{
		
		
		
	}
	
}
